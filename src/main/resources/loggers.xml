<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="eventLogger" class="com.epam.zabara.core.loggers.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="com.epam.zabara.core.loggers.FileEventLogger" init-method="init" abstract="true">
        <property name="fileName" value="log.txt"/>
    </bean>
    <bean id="cacheFileEventLogger"
          class="com.epam.zabara.core.loggers.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <property name="cacheSize" value="10"/>
    </bean>
</beans>