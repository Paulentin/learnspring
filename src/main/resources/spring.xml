<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <import resource="others.xml"/>
    <import resource="loggers.xml"/>

    <bean id="client" class="com.epam.zabara.core.beans.Client">
        <property name="greeting" value="Hello there"/>
        <constructor-arg value="1"/>
        <constructor-arg value="Smith"/>
    </bean>

    <bean id="app" class="com.epam.zabara.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="combinedEventLogger" class="com.epam.zabara.core.loggers.CombinedEventLogger">
        <constructor-arg >
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="cacheFileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>